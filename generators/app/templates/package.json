{
  "name": "<%= name %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "repository": {
    "type": "git",
    "url": "git+<%= git %>.git"
  },
  "author": "<%= author %>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "<%= git %>/issues"
  },
  "homepage": "<%= git %>#README",
  "private": true,
  "scripts": {
    "test": "gulp test",
    "test-karma": "node_modules/karma-cli/bin/karma start karma.conf.js",
    "test-karma-single-run": "node_modules/karma-cli/bin/karma start karma.conf.js --single-run",
    "update-webdriver": "node_modules/protractor/bin/webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "node_modules/protractor/bin/protractor e2e-tests/protractor.conf.js",
    "test-django": "coverage run --branch --source='.' manage.py test --settings=<%= name %>.settings_test && coverage report -m && coverage html",
    "deploy": "cd ~/workspace/ansible/ansible-play/books/ && ansible-playbook django_deploy.yml -e \"host=<%= deployHost %> project=<%= name %>\" --ask-vault-pass",
    "server_upgrade": "cd ~/workspace/ansible/ansible-play/books/ && ansible remotes -m apt -a \"upgrade=yes\" -b -K",
    "dumpdata_admin": "./manage.py dumpdata auth.user admin.logentry --natural-foreign --indent=4 > <%= name %>_core/fixtures/admin.json",
    "dumpdata": "./manage.py dumpdata ninedev_core --natural-foreign --indent=4 > <%= name %>_core/fixtures/<%= name %>.json"
  },
  "dependencies": {
    "angular": "^1.5.7",
    "angular-animate": "^1.5.7",
    "angular-resource": "^1.5.7",
    "angular-route": "^1.5.7",
    "angular-sanitize": "^1.5.7",
    "bootstrap": "^3.3.6",
    "font-awesome": "^4.6.3",
    "jquery": "^2.2.4",
    "responsive-html-email-template": "^1.0.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.7",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "gulpfile-ninecms": "^0.4.0",
    "yargs": "^6.3.0"
  }
}
